<%- include('../partials/head.ejs') %>

<h1>Nieuwe gebruiker aanmaken</h1>

<div id="form-main">
 
  <div id="form-div">
   
    <form class="form" id="form1" method="post">
      
      <p class="username">
      <input name="username" type="text" class="validate[required,custom[onlyLetter],length[0,100]] feedback-input" placeholder="Gebruikersnaam" id="username" />
      </p>
      
      <p class="password">
        <input name="password" type="password" class="validate[required,custom[password]] feedback-input" id="password" placeholder="Wachtwoord" />
      </p>
      
      <p class="email">
        <input name="mail" type="text" class="validate[required,custom[email]] feedback-input" id="email" placeholder="Email" />
      </p>
      
     <p class="hometown">
        <input name="hometown" type="text" class="validate[required,custom[text]] feedback-input" id="hometown" placeholder="Woonplaats" />
      </p>
      
      
      <div class="submit">
        <input type="submit" value="Account aanmaken" id="button-blue"/>
        <div class="ease"></div>
        
      </div>
    </form>
  </div>

